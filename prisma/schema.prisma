generator client {
  provider     = "prisma-client-js"
  output       = "../node_modules/.prisma/client"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Instance {
  id           String   @id @default(uuid())
  apiKey       String   @unique
  username     String?
  password     String?
  storageState String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  lastUsedAt   DateTime @default(now())

  @@map("instances")
}
